{
    "applicationId" : "mawngo.asteroids",
    "defaultMode" : "window",
    "version" : "2.8.0",
    "applicationName" : "Asteroids Game",
    "author" : "Nguyen Toan",
    "description" : "Simple space shooter game",
    "copyright" : "Copyright Â© Nguyen Toan. All rights reserved.",
    "port" : 0,
    "url" : "/resources/",
    "enableServer" : true,
    "enableNativeAPI" : true,
    "logging" : {
        "enabled" : true,
        "writeToLogFile" : false
    },
    "nativeAllowList" : [
        "window.*",
        "events.*",
        "app.*",
        "os.showMessageBox"
    ],
    "modes" : {
        "window" : {
            "title" : "Asteroids",
            "width" : 1600,
            "height" : 900,
            "minWidth" : 1280,
            "minHeight" : 720,
            "fullScreen" : false,
            "alwaysOnTop" : false,
            "icon" : "/resources/icons/appIcon.png",
            "enableInspector" : false,
            "borderless" : false,
            "maximize" : false,
            "hidden" : false,
            "resizable" : true,
            "exitProcessOnClose" : false,
            "center" : true
        }
    },
    "cli" : {
        "binaryName" : "asteroids",
        "resourcesPath" : "/resources/"
    }
}
